{
    "compilerOptions": {
      "outDir": "build",
      "allowJs": true,
      "jsx": "react",
      "module": "es2020",
      "target": "es2020",
      "esModuleInterop": true,
      "sourceMap": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
    },
    "include": ["src/**/*", "webpack.config.ts"],
    "exclude": ["node_modules"]
  }